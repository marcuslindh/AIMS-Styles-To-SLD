<Window x:Class="SLD_Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SLD" Height="622" Width="669" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ToolBar Grid.Row="0">
            <Button Content="Show Log" x:Name="ShowLog" Click="ShowLog_Click" />
        </ToolBar>
        
        <TextBox Grid.Row="1" x:Name="SLD" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
