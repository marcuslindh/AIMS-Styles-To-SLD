<Window x:Class="ReStyle_Filter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ReStyle_Filter" Height="332" Width="551">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.ColumnSpan="2" x:Name="Filter" />
        <Button Grid.Row="1" Grid.Column="1" x:Name="Save" Content="Save" Margin="5" Click="Save_Click" />

    </Grid>
</Window>
